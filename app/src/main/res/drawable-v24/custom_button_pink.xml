<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF80AA" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF80AA"
                android:endColor="#ec407a"
                android:angle="270" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
 </selector>